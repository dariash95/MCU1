#ifndef INC_STM32F1XX_I2C_H_
#define INC_STM32F1XX_I2C_H_

#include "stm32f103xx.h" // MCU specific header file

// Configuration structure for a I2Cx Peripheral
typedef struct{
	uint32_t I2C_SCLSpeed;
	uint8_t I2C_DeviceAddress;
	uint8_t I2C_ACKControl;
	uint16_t I2CFMDutyCycle;
}I2C_Config_t;

// Handle structure for I2Cx Peripheral
typedef struct{
	I2C_Reg_Def_t *pI2Cx;
	I2C_Confog_t I2C_Config;
}I2C_Handle_t;

/* 							Macros  								*/
// Device speed @I2C_SCLSpeed
#define IC2_CLK_SPEED_SM	100000 // Standard Mode
#define IC2_CLK_SPEED_FM2K	200000 // Fast Mode
#define IC2_CLK_SPEED_FM4K	400000 // Fast Mode

#endif /* INC_STM32F1XX_I2C_H_ */
